<?xml version="1.0" encoding="utf-8"?>
<application>
    <routes>
        <controller
            class="eryri.beacon.controller.Beacon"
            pattern="/beacon"
        />
        <controller
            class="eryri.beacon.controller.BeaconAPI"
            pattern="/api/beacon/?"
        />
        <controller
            class="eryri.beacon.controller.BeaconAPI"
            pattern="/api/beacon/*"
            regexp="false"
        />
        <controller
            class="eryri.beacon.controller.BeaconSocket"
            pattern="/ws/beacon"
        />
    </routes>
</application>
