<?xml version="1.0" encoding="utf-8"?>
<application>
    <server>
        <!-- Secret salt for secure-cookie feature -->
        <secret></secret>
        <!-- Uncomment below to enable custom error controller -->
        <!-- <error>app.web.controller.ErrorController</error> -->
    </server>
    <routes>
        <controller class="neptune.controller.Home" pattern="/"/>
        <controller class="neptune.controller.Dashboard" pattern="/dashboard"/>
        <controller
            class="neptune.security.controller.Authentication"
            pattern="/login"
        />
        <controller
            class="neptune.security.controller.Deauthentication"
            pattern="/logout"
        />
        <controller
            class="neptune.management.controller.Beacon"
            pattern="/management/beacon"
        />
        <controller
            class="neptune.management.controller.BeaconAPI"
            pattern="/api/beacon/?"
        />
        <controller
            class="neptune.management.controller.BeaconAPI"
            pattern="/api/beacon/*"
            regexp="false"
        />
        <controller
            class="neptune.management.controller.BeaconSocket"
            pattern="/ws/beacon"
        />
    </routes>
</application>
